{
    "compilerOptions": {
      "target": "ES6",                    /* Specify ECMAScript target version */
      "module": "ESNext",                 /* Specify module code generation */
      "outDir": "./dist/js",              /* Redirect output structure to the directory */
      "rootDir": "./src/ts",             /* Specify the root directory of input files */
      "strict": true,                    /* Enable all strict type-checking options */
      "esModuleInterop": true,            /* Enable emit interoperability between CommonJS and ES Modules */
      "forceConsistentCasingInFileNames": true, /* Disallow inconsistent casing in file names */
      "sourceMap": true                  /* Generate source maps for easier debugging */
    },
    "include": [
      "./src/ts/**/*.ts"                 /* Include TypeScript files from this path */
    ],
    "exclude": [
      "node_modules"                    /* Exclude node_modules from TypeScript processing */
    ]
}