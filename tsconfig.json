{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "target": "es2022",
    "module": "es2022", // Use ESNext for modern ES features
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/js",
    "rootDir": "./src/ts",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true
  },
  "include": [
    "./src/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
